{
	"name":"Chrome插件 for NKBBS",
	"version":"0.2.0",
	"manifest_version":2,

	"icons":{
		"16":"img/icon_16.png",
		"48":"img/icon_48.png",
		"128":"img/icon_128.png"
	},
	"description":"更方便快捷的在chrome下使用nkbbs",

	"background":{
		"scripts":[
	    	"js/jquery.js",
            "js/news.js",
            "js/account.js",
			"background.js"
		]
	},
	"browser_action":{
		"default_title":"NKBBS",
		"default_icon":"img/logo_offline.png",
        "default_popup":"popup.html"
	},
	"offline_enabled":false,
	"permissions":[
		"http://bbs.nankai.edu.cn/",
		"cookies",
		"notifications",
		"tabs"
	]
}
